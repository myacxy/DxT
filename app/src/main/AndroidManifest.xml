<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.myacxy.squinch"
    >

    <!-- Internet permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="net.myacxy.squinch.SquinchApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_android_black_24dp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >

        <service
            android:name="net.myacxy.squinch.TwitchExtension"
            android:icon="@drawable/ic_android_black_24dp"
            android:label="@string/app_name"
            android:permission="com.google.android.apps.dashclock.permission.READ_EXTENSION_DATA"
            >

            <intent-filter>
                <action android:name="com.google.android.apps.dashclock.Extension" />
            </intent-filter>

            <meta-data
                android:name="protocolVersion"
                android:value="2"
                />

            <meta-data
                android:name="worldReadable"
                android:value="true"
                />

            <meta-data
                android:name="description"
                android:value="Description"
                />

            <meta-data
                android:name="settingsActivity"
                android:value="net.myacxy.squinch.settings.SettingsActivity"
                />

        </service>

        <service
            android:name="net.myacxy.squinch.RetroTwitchJobService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE"
            />

        <activity
            android:name="net.myacxy.squinch.settings.SettingsActivity"
            android:exported="true"
            >

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

        </activity>

        <activity
            android:name="net.myacxy.squinch.KotlinActivity"
            android:exported="true"
            />

    </application>

</manifest>
